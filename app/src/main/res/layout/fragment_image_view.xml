<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black">

    <data>

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="color"
            type="String" />

        <variable
            name="authorName"
            type="String" />
    </data>


    <FrameLayout
        colorFromHex="@{color}"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            color="@{color}"
            image="@{imageUrl}"
            scalable="@{true}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>


    </FrameLayout>

</layout>